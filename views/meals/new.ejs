<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="name-input">Name of Meal:</label>
    <input type="text" name="name" id="name-input">
    <button type="submit">Add Meal</button>
  </form>

  <p>Please check if your meal exists before adding:</p>
  <select>
    <% meals.forEach((meal) => { %>
      <option><%= meal.name %></option>
    <% }) %>
  </select>


<br><br>
</main>

